{
    "id": "play-audio-timer",
    "name": "play simple audio with timer. Both timers cancels onleaving the station/activating another station.",
    "tags": ["story", "timer"],
    "triggers": [ 
        {
            "station_id": "1",
            "action": "playAudio",
            "audioType": "story", 
            "audioFilename": "audio-test-1.mp3"
        },
        {       
            "action": "startTimeLimit",
            "timername": "timer-help-1",
            "cancelOnLeave": true,
            "timeLimit": 2,
            "timeLimitEnd": {
                "action": "playAudio",
                "audioType": "timerhelp",
                "audioFilename": "timerhelp-test-1.mp3"
            }
        },
        {       
            "action": "startTimeLimit",
            "timername": "timer-story-1-2",
            "cancelOnLeave": true,
            "timeLimit": 5,
            "timeLimitEnd": {
                "action": "goToStation",
                "toStation": "play-audio-timer-2" }
        }
    ]
}
